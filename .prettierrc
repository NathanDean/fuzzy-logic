{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 80,
  "tabWidth": 2,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "tailwindFunctions": ["clsx", "cn"],
  "importOrder": [
    "^react$",
    "^react-dom$",
    "^next",
    "<THIRD_PARTY_MODULES>",
    "^@/assets/(.*)$",
    "^@/styles/(.*)$",
    "^@/context/(.*)$",
    "^@/hooks/(.*)$",
    "^@/services/(.*)$",
    "^@/utils/(.*)$",
    "^@/components/common/(.*)$",
    "^@/components/features/(.*)$",
    "^@/pages/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderCaseInsensitive": true
}
